<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/oneDLevelImg"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/one_dimensional_level" />

    <ImageView
        android:id="@+id/bubbleImg"
        android:layout_width="wrap_content"
        android:layout_height="78dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/oneDLevelImg"
        app:layout_constraintStart_toStartOf="@+id/oneDLevelImg"
        app:layout_constraintTop_toTopOf="@+id/oneDLevelImg"
        app:srcCompat="@drawable/bubble" />

    <ImageView
        android:id="@+id/twoDLevelImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/valuesTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/two_dimensional_level" />

    <ImageView
        android:id="@+id/twoDBubbleImg"
        android:layout_width="wrap_content"
        android:layout_height="78dp"
        app:layout_constraintBottom_toBottomOf="@+id/twoDLevelImg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/twoDLevelImg"
        app:srcCompat="@drawable/bubble" />

    <ImageView
        android:id="@+id/crossImg"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="@+id/twoDLevelImg"
        app:layout_constraintEnd_toEndOf="@+id/twoDLevelImg"
        app:layout_constraintStart_toStartOf="@+id/twoDLevelImg"
        app:layout_constraintTop_toTopOf="@+id/twoDLevelImg"
        app:srcCompat="@drawable/cross" />

    <ImageView
        android:id="@+id/crossOneDImg"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/bubbleImg"
        app:layout_constraintEnd_toEndOf="@+id/bubbleImg"
        app:layout_constraintStart_toStartOf="@+id/bubbleImg"
        app:layout_constraintTop_toTopOf="@+id/bubbleImg"
        app:srcCompat="@drawable/cross" />

    <TextView
        android:id="@+id/valuesTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X :  Y:"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/oneDLevelImg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>